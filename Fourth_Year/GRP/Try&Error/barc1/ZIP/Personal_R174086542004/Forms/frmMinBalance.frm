Private Sub cmdSave_Click()
    On Error GoTo hErr
    If txtMinBalance.Text < 0 Then
        MsgBox "Please enter only positive number!", vbExclamation, "Value Not Valid"
        Call SelectAllText(txtMinBalance)
        Exit Sub
    End If
    
    If m_rsMinBalance.RecordCount = 0 Then
        m_rsMinBalance.AddNew
    End If
    
    m_rsMinBalance("MinimumBalance").Value = txtMinBalance.Text
    m_rsMinBalance.Update
    g_lngMinimumBalance = txtMinBalance.Text
    MsgBox "Minimum balance requirement updated!", vbInformation, "Saved"
' CSErrorHandler begin - please do not modify or remove this line
Exit Sub
hErr:
